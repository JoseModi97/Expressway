{% extends 'layout.twig' %}

{% block body %}
  <div class="container mt-5">
    <div id="loading-animation" class="loading-animation-container" style="display: none;">
      <div class="spinner"></div>
    </div>
    <h1 class="mb-4 text-center">Dog Image Gallery</h1>

    <div id="dog-grid-container" class="row g-3">
      <!-- Images will be loaded here by JavaScript -->
    </div>
  </div>

  <!-- Include Bootstrap 5 JS (bundle includes Popper) if not already globally available -->
  <!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script> -->

  <script src="/js/dog-grid.js"></script>

  <!-- Lightbox Structure -->
  <div id="lightbox-modal" class="lightbox" style="display: none;">
    <span class="lightbox-close">&times;</span>
    <img class="lightbox-content" id="lightbox-image">
    <a class="lightbox-prev">&#10094;</a>
    <a class="lightbox-next">&#10095;</a>
    <div id="lightbox-caption"></div>
  </div>
{% endblock %}
